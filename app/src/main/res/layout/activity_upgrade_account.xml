<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.UpgradeAccount">

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/nk_name">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/facials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/gabriola"
            android:text="Facials"
            android:textColor="@color/purple"
            android:textSize="20sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/nails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriola"
            android:text="Nails"
            android:textColor="@color/purple"
            android:textSize="20sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiogrp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nk_name">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/hair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/gabriola"
            android:text="Hair braiding"
            android:textColor="@color/purple"
            android:textSize="20sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriola"
            android:text="Massage sessions"
            android:textColor="@color/purple"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:fontFamily="@font/gabriola"
        android:text="Business Account"
        android:textColor="@color/color_white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_btn"
        app:layout_constraintStart_toStartOf="@id/img_btn"
        app:layout_constraintTop_toTopOf="@id/img_btn" />

    <TextView
        android:id="@+id/txt_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/gabriola"
        android:text="Upgrade to Business Account"
        android:textColor="@color/purple"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acc_img" />

    <TextView
        android:id="@+id/txt_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gabriola"
        android:text="Business name *"
        android:textColor="@color/light_magenta"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_upgrade"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gabriola"
        android:text="Phone number *"
        android:textColor="@color/light_magenta"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/business_name"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/txt_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gabriola"
        android:text="Address *"
        android:textColor="@color/light_magenta"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/txt_cpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gabriola"
        android:text="Nickname *"
        android:textColor="@color/light_magenta"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/txt_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gabriola"
        android:text="Services You Offer"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/nk_name"
        app:layout_constraintBottom_toTopOf="@id/radiogrp"
        app:layout_constraintStart_toStartOf="@id/nk_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/gabriola"
        android:text="(enable all that apply) *"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/nk_name"
        app:layout_constraintBottom_toTopOf="@id/radiogrp"
        app:layout_constraintStart_toEndOf="@id/txt_services" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_release_transition"
        android:clickable="true"
        android:elevation="10dp"
        android:ems="8"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/gabriola"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="REGISTER"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_leftarrow_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acc_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:ems="9"
        android:fontFamily="@font/gabriola"
        android:hint="salona"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_bn" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:ems="9"
        android:fontFamily="@font/gabriola"
        android:hint="+(237)"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_phone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:ems="9"
        android:fontFamily="@font/gabriola"
        android:hint="5th street"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_pwd" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:ems="9"
        android:fontFamily="@font/gabriola"
        android:hint="starlight"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_cpwd" />


</androidx.constraintlayout.widget.ConstraintLayout>